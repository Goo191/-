{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "public/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": "base64:your-app-key-here",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "database/database.sqlite",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "QUEUE_CONNECTION": "sync"
  },
  "functions": {
    "public/index.php": {
      "runtime": "php8.1"
    }
  }
}
